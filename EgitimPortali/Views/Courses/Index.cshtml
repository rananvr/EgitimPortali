@model IEnumerable<EgitimPortali.Models.Course>

@{
    ViewData["Title"] = "Kurs Yönetimi";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kurs Listesi</h1>
    <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Kurs Ekle
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Mevcut Kurslar</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Resim</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.Id">
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" width="50" height="50" style="object-fit:cover; border-radius:5px;" />
                                }
                            </td>
                            <td>@item.Title</td>
                            <td>
                                <span class="badge badge-info">
                                    @(item.Category != null ? item.Category.Name : "Genel")
                                </span>
                            </td>
                            <td>
                                @if (item.Price == 0)
                                {
                                    <span class="badge bg-success">Ücretsiz</span>
                                }
                                else
                                {
                                    @item.Price.ToString("C2")
                                }
                            </td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm btn-circle" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <button onclick="silKurs(@item.Id)" class="btn btn-danger btn-sm btn-circle" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function silKurs(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu kurs kalıcı olarak silinecektir!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // AJAX İsteği Başlıyor
                    $.ajax({
                        type: "POST",
                        url: "/Courses/DeleteCourseAjax", // Controller'daki metod
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                // 1. Başarılı mesajı göster
                                Swal.fire(
                                    'Silindi!',
                                    response.message,
                                    'success'
                                );
                                // 2. Tablodaki satırı animasyonla kaldır
                                $("#row_" + id).fadeOut(500, function () {
                                    $(this).remove();
                                });
                            } else {
                                Swal.fire('Hata', response.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('Hata', 'Sunucu ile iletişim kurulamadı.', 'error');
                        }
                    });
                }
            })
        }
    </script>
}