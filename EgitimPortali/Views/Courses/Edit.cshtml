@model EgitimPortali.Models.Course

@{
    ViewData["Title"] = "Kurs Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Kurs Bilgilerini Güncelle</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Kurs Başlığı</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kategori</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kapak Resmi (Değiştirmek istemiyorsan boş bırak)</label>
                        <input type="file" name="resimDosyasi" class="form-control" accept="image/*" />
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mt-2">
                                <small>Şu anki resim:</small><br />
                                <img src="@Model.ImageUrl" width="100" class="rounded border" />
                            </div>
                        }
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label fw-bold">Kurs Ücreti (TL)</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>