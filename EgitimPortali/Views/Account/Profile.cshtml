@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3>Profil Bilgilerim</h3>
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
            <p><strong>Kullanıcı ID:</strong> @Model.Id</p>

            <hr />
            <a href="/Courses/Create" class="btn btn-success">
                <i class="fa fa-plus"></i> Kurs Ekleme Sayfasına Git
            </a>
        </div>
    </div>
</div>