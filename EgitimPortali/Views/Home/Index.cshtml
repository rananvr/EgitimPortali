@model IEnumerable<EgitimPortali.Models.Course>

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "_FrontLayout"; // <--- İŞTE SİHİRLİ KOD BU!
}

<div class="text-center mb-5">
    <h1 class="display-4 text-gray-800">Eğitim Dünyasına Hoş Geldiniz</h1>
    <p class="lead">Kendinizi geliştirmek için en iyi kursları buradan inceleyebilirsiniz.</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow h-100 border-bottom-primary">

                <div style="height: 200px; overflow: hidden;">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="width: 100%; height: 100%; object-fit: cover;">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/300x200?text=Resim+Yok" class="card-img-top" style="width: 100%; height: 100%; object-fit: cover;">
                    }
                </div>

                <div class="card-body">
                    <div class="mb-2">
                        @if (item.Category != null)
                        {
                            <span class="badge badge-success">@item.Category.Name</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Genel</span>
                        }
                    </div>

                    <div class="small text-muted mt-2 mb-2">
                        <i class="fas fa-user-tie"></i>
                        Eğitmen: <strong>@(item.Instructor != null ? item.Instructor.FullName : "Anonim")</strong>
                    </div>



                    <h5 class="card-title font-weight-bold text-dark">@item.Title</h5>

                    <p class="card-text text-muted">
                        @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 100)
                        {
                            @item.Description.Substring(0, 100)
                    
                            <text>...</text>
                        }
                        else
                        {
                            @item.Description
                        }
                    </p>
                </div>

                <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center">
                    <h5 class="text-primary font-weight-bold m-0">@item.Price ₺</h5>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">İncele</a>
                </div>
            </div>
        </div>
    }
</div>