@model IEnumerable<EgitimPortali.Models.Course>
@{
    ViewData["Title"] = "Kurslarım";
    Layout = "_FrontLayout";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-video"></i> Kurslarım</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Henüz satın aldığınız bir kurs yok. <a asp-action="Index">Kursları İncele</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@item.ImageUrl" class="card-img-top" style="height: 180px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted">@item.Description.Substring(0, Math.Min(item.Description.Length, 50))...</p>
                            <a href="#" class="btn btn-success w-100">
                                <i class="fas fa-play"></i> Derse Başla
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>