@model EgitimPortali.Models.Course

@{
    ViewData["Title"] = "Kurs Detayı";
    Layout = "_FrontLayout";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow w-100" alt="@Model.Title" style="object-fit: cover; max-height: 400px;">
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow" style="height: 300px;">
                    <span>Resim Yok</span>
                </div>
            }
        </div>

        <div class="col-md-6">
            <h1 class="fw-bold text-custom-purple display-6">@Model.Title</h1>

            <div class="mb-4">
                <span class="badge bg-warning text-dark p-2 fs-6">
                    <i class="fas fa-tag"></i> @(Model.Category != null ? Model.Category.Name : "Genel")
                </span>
                <span class="text-muted ms-3">
                    <i class="far fa-clock"></i> @Model.CreatedDate.ToString("dd MMMM yyyy")
                </span>
            </div>

            <div class="mb-4">
                <h5 class="fw-bold">Kurs Hakkında</h5>
                <p class="lead" style="font-size: 1.1rem;">@Model.Description</p>
            </div>

            <div class="mb-4 p-3 bg-light rounded border">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-bold text-muted">Kurs Ücreti:</span>

                    @if (Model.Price == 0)
                    {
                        <span class="badge bg-success fs-4 px-4 py-2">Ücretsiz</span>
                    }
                    else
                    {
                        <span class="fw-bold text-dark fs-3">@Model.Price.ToString("N2") ₺</span>
                    }
                </div>
            </div>

            <hr />

            <div class="d-grid gap-2">
                <form asp-controller="Home" asp-action="Enroll" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <button type="submit" class="btn btn-success btn-lg w-100 py-3 fw-bold shadow-sm">
                        <i class="fas fa-shopping-cart me-2"></i>
                        @(Model.Price == 0 ? "Bu Kursa Ücretsiz Kayıt Ol" : "Hemen Satın Al")
                    </button>
                </form>

                <a asp-action="Index" class="btn btn-outline-secondary mt-2">
                    <i class="fas fa-arrow-left"></i> Kurs Listesine Dön
                </a>
            </div>
        </div>
    </div>
</div>