@model EgitimPortali.Models.Course

@{
    ViewData["Title"] = Model.Title;
    Layout = "_FrontLayout"; // Vitrin tasarımını kullan
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" style="width:100%; height:400px; object-fit:cover;">
                }
                else
                {
                    <img src="https://via.placeholder.com/600x400" class="img-fluid rounded" alt="Resim Yok">
                }
            </div>
        </div>

        <div class="col-md-6">
            <h1 class="display-5 fw-bold text-dark">@Model.Title</h1>

            <div class="mb-3">
                @if (Model.Category != null)
                {
                    <span class="badge bg-primary fs-6">@Model.Category.Name</span>
                }
                <span class="badge bg-warning text-dark fs-6 ms-2">
                    <i class="fas fa-star"></i> 4.8 (120 Oy)
                </span>
            </div>

            <h2 class="text-primary fw-bold mb-4">@Model.Price ₺</h2>

            <p class="lead text-muted">
                @Model.Description
            </p>

            <div class="d-grid gap-2 mt-5">
                <form asp-action="BuyCourse" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <button type="submit" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-shopping-cart"></i> Hemen Satın Al
                    </button>
                </form>
                <button class="btn btn-outline-secondary" type="button">
                    <i class="far fa-heart"></i> İstek Listesine Ekle
                </button>
            </div>

            <div class="mt-4 p-3 bg-light rounded border shadow-sm">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; font-size: 20px;">
                            <i class="fas fa-user-tie"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0 fw-bold text-dark">
                            Eğitmen: @(Model.Instructor != null ? Model.Instructor.FullName : "Eğitmen Belirtilmemiş")
                        </h6>
                        <small class="text-muted">
                            @(Model.Instructor != null ? Model.Instructor.Email : "")
                        </small>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>