<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eğitim Portalı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Site içeriği footer'ın altında kalmasın diye min-height */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: auto;
        }
    </style>
    <style>
        /* Navbar (Üst Menü) */
        .bg-primary {
            background-color: #6f42c1 !important; /* Mor */
        }

        /* Butonlar */
        .btn-primary {
            background-color: #6f42c1 !important;
            border-color: #6f42c1 !important;
        }

            .btn-primary:hover {
                background-color: #5a32a8 !important; /* Koyu Mor */
                border-color: #5a32a8 !important;
            }

        /* Çizgili Butonlar (Outline) */
        .btn-outline-primary {
            color: #6f42c1 !important;
            border-color: #6f42c1 !important;
        }

            .btn-outline-primary:hover {
                background-color: #6f42c1 !important;
                color: #fff !important;
            }

        /* Yazılar */
        .text-primary {
            color: #6f42c1 !important;
        }

        /* Linkler */
        a.text-primary:hover, a.text-primary:focus {
            color: #4e2d88 !important;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="fas fa-graduation-cap"></i> Eğitim Portalı
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("UserName")))
                    {
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                        </li>
                    }
           
                </ul>

                @using Microsoft.AspNetCore.Http
                @inject IHttpContextAccessor HttpContextAccessor

                <ul class="navbar-nav ms-auto">
                    @{
                        // Session'dan kullanıcı adını çekiyoruz
                        var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
                        var userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
                    }

                    @if (string.IsNullOrEmpty(userName))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus"></i> Kayıt Ol
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-warning text-dark fw-bold" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold border border-white rounded px-3" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user"></i> Merhaba, @userName
                            </a>
                        </li>

                        @if (userRole == "Egitmen")
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-outline-light" asp-controller="Courses" asp-action="Index">Yönetim Paneli</a>
                            </li>
                        }

                        <li class="nav-item ms-2">
                            <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer border-top">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase mb-3">Eğitim Portalı</h5>
                    <p class="small text-muted">Kendinizi geliştirmek için en doğru adres.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase mb-3">Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Account" asp-action="RegisterInstructor" class="text-decoration-none text-warning">Eğitmen Ol</a></li>
                        <li><a href="#" class="text-decoration-none text-muted">Ana Sayfa</a></li>
                        <li><a href="#" class="text-decoration-none text-muted">Tüm Kurslar</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase mb-3">İletişim</h5>
                    <p class="small text-muted">info@egitimportali.com</p>
                </div>
            </div>
            <div class="copyright text-muted mt-3">
                &copy; 2025 Eğitim Portalı - Tüm Hakları Saklıdır.
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>