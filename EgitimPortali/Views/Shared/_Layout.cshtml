@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Eğitim Portalı Admin Paneli">
    <meta name="author" content="">

    <title>Eğitmen Paneli</title>

    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        :root {
            --mor-ana: #6f42c1; 
            --mor-koyu: #4e2d88; 
        }

        .bg-gradient-primary {
            background-color: var(--mor-ana) !important;
            background-image: linear-gradient(180deg, var(--mor-ana) 10%, var(--mor-koyu) 100%) !important;
            background-size: cover !important;
        }

        .btn-primary {
            background-color: var(--mor-ana) !important;
            border-color: var(--mor-ana) !important;
        }

            .btn-primary:hover {
                background-color: var(--mor-koyu) !important;
                border-color: var(--mor-koyu) !important;
            }

        .text-primary {
            color: var(--mor-ana) !important;
        }

        .border-left-primary {
            border-left: .25rem solid var(--mor-ana) !important;
        }

        .page-item.active .page-link {
            background-color: var(--mor-ana) !important;
            border-color: var(--mor-ana) !important;
        }
    </style>

</head>

<body id="page-top">

    <div id="wrapper">

        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Courses" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div class="sidebar-brand-text mx-3"> Yönetim <sup></sup></div>
            </a>

            <hr class="sidebar-divider my-0">

            <li class="nav-item active">
                <a class="nav-link" asp-controller="Courses" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Panel Özeti</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">
                Yönetim Araçları
            </div>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseKurslar"
                   aria-expanded="true" aria-controls="collapseKurslar">
                    <i class="fas fa-fw fa-book"></i>
                    <span>Kurs İşlemleri</span>
                </a>
                <div id="collapseKurslar" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Ne Yapmak İstersin?</h6>
                        <a class="collapse-item" asp-controller="Courses" asp-action="Index">Kursları Listele</a>
                        <a class="collapse-item" asp-controller="Courses" asp-action="Create">Yeni Kurs Ekle</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseKategoriler"
                   aria-expanded="true" aria-controls="collapseKategoriler">
                    <i class="fas fa-fw fa-tags"></i>
                    <span>Kategori İşlemleri</span>
                </a>
                <div id="collapseKategoriler" class="collapse" aria-labelledby="headingUtilities"
                     data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Kategori Yönetimi:</h6>
                        <a class="collapse-item" asp-controller="Categories" asp-action="Index">Kategorileri Listele</a>
                        <a class="collapse-item" asp-controller="Categories" asp-action="Create">Yeni Kategori Ekle</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Enrollments" asp-action="Index">
                    <i class="fas fa-fw fa-shopping-cart"></i>
                    <span>Satın Almalar</span>
                </a>
            </li>


            <hr class="sidebar-divider">


            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-home"></i>
                    <span>Siteye Git (Vitrin)</span>
                </a>
            </li>

            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">

                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        var adSoyad = User.FindFirst("FullName")?.Value;
                                        @(adSoyad ?? User.Identity.Name)
                                    }
                                    else
                                    {
                                        <text>Misafir</text>
                                    }
                                </span>
                                <img class="img-profile rounded-circle"
                                     src="/img/undraw_profile.svg">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profilim
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Çıkış Yap
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Eğitim Portalı 2025</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Çıkış Yapılsın mı?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Oturumunuzu sonlandırmak için "Çıkış Yap" butonuna basın.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Vazgeç</button>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                </div>
            </div>
        </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <div id="ozelBildirimKutusu" style="display:none; position: fixed; top: 20px; right: 20px; background-color: #ffffff; color: #333; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.2); z-index: 9999; border-left: 5px solid #1cc88a; width: 300px;">
        <h5 style="margin: 0 0 10px 0; font-weight: bold; color: #1cc88a;">
            <i class="fas fa-bell"></i> Yeni Satış Var!
        </h5>
        <p id="bildirimMetni" style="margin: 0 0 15px 0;">Yeni bir kurs satışı gerçekleşti.</p>

        <div style="text-align: right;">
            <button onclick="kapat()" class="btn btn-sm btn-secondary">Kapat</button>
            <button onclick="sayfayiYenile()" class="btn btn-sm btn-success">
                <i class="fas fa-sync-alt"></i> Listeyi Yenile
            </button>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

    <script>
        // 1. Bağlantıyı kur
        var connection = new signalR.HubConnectionBuilder().withUrl("/satisHub").build();

        // 2. Bağlantıyı başlat
        connection.start().then(function () {
            console.log("SignalR Bağlandı ve Dinlemede...");
        }).catch(function (err) {
            return console.error(err.toString());
        });

        // 3. Mesaj gelince ne olacak?
        connection.on("SatisYapildi", function (message) {
            console.log("SİNYAL ALINDI: " + message);

            // KUTUYU GÖSTER
            var kutu = document.getElementById("ozelBildirimKutusu");
            var metin = document.getElementById("bildirimMetni");

            metin.innerText = message; 
            kutu.style.display = "block"; 

        });

        function sayfayiYenile() {
            location.reload();
        }

        function kapat() {
            document.getElementById("ozelBildirimKutusu").style.display = "none";
        }
    </script>
</body>
</html>